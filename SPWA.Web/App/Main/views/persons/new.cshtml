<div ng-controller="spwa.views.person.new as vm">
    <form id="addPersonForm" role="form" name="addPersonForm" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span>添加人员</span>
            </h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label for="PersonName">姓名</label>
                <input id="PersonName" type="text" ng-model="vm.personDto.name" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="PersonAge">年龄</label>
                <input id="PersonAge" type="text" class="form-control" ng-model="vm.personDto.age" required/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="vm.cancel()">取消</button>
                <button type="submit" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="addPersonForm.$invalid"><i class="fa fa-save"></i> <span>保存</span></button>
            </div>
        </div>
</form>
</div>